<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.csc311_mod3hw.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Loan Amount -->
    <Label text="Loan Amount"/>
    <TextField fx:id="loanAmountTextField" promptText="Enter loan amount"/>

    <!-- Annual Interest Rate -->
    <Label text="Annual Interest Rate (%)"/>
    <TextField fx:id="interestRateTextField" promptText="Enter interest rate"/>

    <!-- Number of Years -->
    <Label text="Number of Years"/>
    <TextField fx:id="yearsTextField" promptText="Enter number of years"/>

    <!-- Monthly Payment -->
    <Label text="Monthly Payment"/>
    <TextField fx:id="monthlyPaymentTextField" editable="false"/>

    <!-- Total Payment -->
    <Label text="Total Payment"/>
    <TextField fx:id="totalPaymentTextField" editable="false"/>

    <!-- Calculate Button -->
    <Button text="Calculate" onAction="#onCalculateButtonClick"/>
</VBox>
